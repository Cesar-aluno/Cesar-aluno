import tkinter as tk
from tkinter import messagebox

def sair():
    root.quit()

def ir_para_cadastro():
    nome = nome_entry.get()
    senha = senha_entry.get()
    if nome and senha:
        messagebox.showinfo("Cadastro", f"Nome: {nome}\nSenha: {senha}")
    else:
        messagebox.showwarning("Cadastro", "Por favor, preencha todos os campos.")

# Janela principal de cadastro
root = tk.Tk()
root.title('Cadastro')

# Título
titulo = tk.Label(root, text='Tela de Cadastro', font=('verdana', 28))
titulo.pack(pady=20)

# Layout para o nome
tk.Label(root, text='Nome:').pack(pady=10)
nome_entry = tk.Entry(root)
nome_entry.pack(pady=10)

# Layout para a senha
tk.Label(root, text='Senha:').pack(pady=10)
senha_entry = tk.Entry(root, show='*')
senha_entry.pack(pady=10)

# Botão para sair
btn_sair = tk.Button(root, text='Sair', command=sair)
btn_sair.pack(side=tk.LEFT, padx=40, pady=20)

# Botão para cadastrar
btn_cadastrar = tk.Button(root, text='Cadastrar', command=ir_para_cadastro)
btn_cadastrar.pack(side=tk.LEFT, padx=40, pady=20)

# Início do loop da interface
root.mainloop()
